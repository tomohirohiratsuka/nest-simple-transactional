{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "skipLibCheck": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "paths": {
            "@src/*": [
                "src/*"
            ],
        }
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
    ]
}
